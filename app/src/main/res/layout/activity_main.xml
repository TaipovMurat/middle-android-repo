<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/xmlActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/top_view_background"
        android:layout_marginBottom="@dimen/padding_vertical"
        android:text="@string/xml_screen" />

    <Button
        android:id="@+id/composeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_vertical"
        android:background="@drawable/bottom_view_background"
        android:text="@string/compose_screen" />

</LinearLayout>